<!DOCTYPE html>
<html>
  <head>
            <!-- Required meta tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="author" content="Surjith S M">
    <meta name="description" content="#">
    <meta name="keywords" content="#">
    <title>Sherpa</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%#= stylesheet_pack_tag 'application', media: 'all' %> <!-- Uncomment if you import CSS in app/javascript/packs/application.js -->

    <!-- Favicons -->
    <link rel="shortcut icon" href="#">
    <!-- Page Title -->
    <title>Listed</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="assets/vendor/bootstrap.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" rel="stylesheet">
    <!-- Themify Icon -->
    <link rel="stylesheet" href="assets/vendor/themify-icons.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="assets/vendor/font-awesome.min.css">
    <!-- line icons -->
    <link rel="stylesheet" href="assets/vendor/simple-line-icons.css">
    <!-- Swipper Slider -->
    <link rel="stylesheet" href="assets/vendor/swiper.min.css">
    <!-- Magnific Popup CSS -->
    <link rel="stylesheet" href="assets/vendor/magnific-popup.css">
    <!-- Hover Effects -->
    <!-- <link href="css/set1.css" rel="stylesheet"> -->
    <!-- Main CSS -->
    <link rel="stylesheet" href="assets/vendor/_style.scss">

    <%= favicon_link_tag '/images/logo.png' %>
  </head>
  <body>
    <%= render 'shared/flashes' %>
    <%= yield %>

    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
        <!-- jQuery, Bootstrap JS. -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
<!--     <script src="/assets/jquery-3.2.1.min.js"></script>
    <script src="/assets/popper.min.js"></script>
    <script src="/assets/bootstrap.min.js"></script> -->

    <!-- Magnific popup JS -->
    <script src="/assets/jquery.magnific-popup.js"></script>
    <!-- Swipper Slider JS -->
    <script src="/assets/swiper.min.js"></script>
    <script>
        var swiper = new Swiper('.swiper-container', {
            slidesPerView: 3,
            slidesPerGroup: 3,
            loop: true,
            loopFillGroupWithBlank: true,
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
        });
    </script>
    <script>
        if ($('.image-link').length) {
            $('.image-link').magnificPopup({
                type: 'image',
                gallery: {
                    enabled: true
                }
            });
        }
        if ($('.image-link2').length) {
            $('.image-link2').magnificPopup({
                type: 'image',
                gallery: {
                    enabled: true
                }
            });
        }
    </script>
  </body>
</html>
